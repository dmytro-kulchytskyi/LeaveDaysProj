@model leavedays.Models.EditModel.EditRequest

@{
    ViewBag.Title = "Create";
    Layout = null;
}
<html>
<head>
    <link href="~/Content/datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("Create", "Request", FormMethod.Post))
    {
        @Html.AntiForgeryToken();

        @Html.DisplayFor(model => model.UserId);<br />
        @Html.HiddenFor(model => model.UserId);

        @Html.DisplayFor(model => model.CompanyId);<br />
        @Html.HiddenFor(model => model.CompanyId);

    @Html.DisplayFor(model => model.Status);<br />
    @Html.HiddenFor(model => model.Status);

    <input type="hidden" id="dateField" class="datepicker-here" data-multiple-dates="2" data-inline="true" data-multiple-dates-separator="-" name="VacationDates" />
    @Html.DisplayFor(model => model.RequestBase);<br />
    @Html.EditorFor(model => model.RequestBase);<br />

    <input type="submit" value="Create" />
    }
    <script src="~/Scripts/datepicker.min.js"></script>
</body>
</html>
