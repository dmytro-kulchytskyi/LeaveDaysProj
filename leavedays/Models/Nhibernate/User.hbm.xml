<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="leavedays" namespace="leavedays.Models">
  <class name="User" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>
    <property name="UserName" />
    <property name="FirstName" />
    <property name="LastName" type="string"/>
    <set name="Groups" table="User_Group"  lazy="false">
      <key column="Id"/>
      <many-to-many class="Group" column="Id" />
    </set>
    <set name="Modules" table="User_Module"  lazy="false">
      <key column="Id"/>
      <many-to-many class="Module" column="Id" />
    </set>
  </class>

</hibernate-mapping>